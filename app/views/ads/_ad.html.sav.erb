<tr>
  <td class="ad">    
    <span class="timestamp">
	  <strong>Post id:</strong> <%= 10000000+ad.id %>&nbsp;&nbsp;&nbsp;
      <strong>Posted on:</strong> <%= ad.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
    </span>
	<span class="email"><strong>Sailer's email:</strong> <%= ad.email %></span>
	<span class="content"><%= ad.content %></span>	
  </td>
  <% if signed_in? %>
  <% if user = ad.user rescue User.find(ad.user_id) %>
  <% if current_user.id == user.id %>
  <td>
    <%= link_to "delete", current_user, :method => :delete,
                                     :confirm => "You sure?",
                                     :title => ad.content %>
  </td>
  <% end %>
  <% end %>
  <% end %>  
</tr>