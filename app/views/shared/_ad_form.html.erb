<%= form_for @ad do |f| %> 
    <%= render 'shared/error_messages', :object => f.object %>
    <div class="field">
      <%= f.label :"Sailer's email " %><br/>
      <%= f.text_field :email %>
    </div>
    <div class="field">
	  <%= f.label :Description %><br/>
      <%= f.text_area :content %>
    </div>
    <div class="actions">
      <%= f.submit "Update" %>
	  <% if current_user.id == @ad.user_id %>
    
      <%= link_to "delete it?", @ad, :method => :delete,
                                     :confirm => "You sure?",
                                     :title => @ad.content %>
    
      <% end %>  
    </div>
<% end %>