<h1><%= @category.name.capitalize %></h1>

<% if signed_in? %>
  <%= render 'shared/ad_form' %>   
<% end %>

<table class="main">
  <tr>
    <% if !signed_in? %>
      <td><%= link_to "Please sign in to post ads", signin_path %></td>
	<% else %>
	  <td><%= link_to @current_user.name, current_user %><%= " Please post your ad!" %></td>	  
	<% end %>
  </tr>
</table>
<table class="profile">
  <tr>
    <td class="main">
      <% unless @category.ads.empty? %>
        <table class="ads" summary="Category ads">
          <%= render @ads %>
        </table>
        <%= will_paginate @ads %>
      <% end %>
    </td>
  </tr>
</table>
